@page
@model GirlBossSkeleton.Pages.Admin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    ID
                </th>
                <th>
                    Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    IsMentor
                </th>
                <th>
                    IsApprovedMentor
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@if(Model.AppUsers.Count() == 0) {
        <tr><td colspan="3" class="text-center">No User Accounts</td></tr> 
}
@foreach (var user in Model.AppUsers) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => user.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => user.IsMentor)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@user.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@user.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
