@page
@model GirlBossSkeleton.Pages.RoleAdmin.IndexModel
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary panel-body"><h4>Roles</h4></div>
<div class="text-danger" asp-validation-summary="ModelOnly"></div>
<table class="table table-condensed table-bordered table-bordered">
    <tr><th>ID</th><th>Name</th><th>Users</th><th></th></tr>
    @if (Model.Roles.Count() == 0)
    {
        <tr><td colspan="4" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var role in Model.Roles)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td identity-role="@role.Id"></td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@role.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@role.Id">Delete</a>
                </td>
            </tr>
        }
    }
</table>
<a class="btn btn-primary" asp-page="./Create">Create</a>
