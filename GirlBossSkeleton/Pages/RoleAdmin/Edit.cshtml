@page
@model GirlBossSkeleton.Pages.RoleAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="bg-primary panel-body"><h4>Edit Role</h4></div>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="Edit" method="post">
    <input type="hidden" name="roleName" value="@Model.RoleEditViewModel.Role.Name" />
    <input type="hidden" name="roleId" value="@Model.RoleEditViewModel.Role.Id" />
    <h6 class="bg-info panel-body">Add To @Model.RoleEditViewModel.Role.Name</h6>
    <table class="table table-bordered table-condensed">
        @if (Model.RoleEditViewModel.NonMembers.Count() == 0)
        {
            <tr><td colspan="2">All Users Are Members</td></tr>
        }
        else
        {
            @foreach (var user in Model.RoleEditViewModel.NonMembers)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToAdd" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <h6 class="bg-info panel-body">Remove From @Model.RoleEditViewModel.Role.Name</h6>
    <table class="table table-bordered table-condensed">
        @if (Model.RoleEditViewModel.Members.Count() == 0)
        {
            <tr><td colspan="2">No Users Are Members</td></tr>
        }
        else
        {
            @foreach (var user in Model.RoleEditViewModel.Members)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>
                        <input type="checkbox" name="IdsToDelete" value="@user.Id">
                    </td>
                </tr>
            }
        }
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-default">Cancel</a>
</form> 